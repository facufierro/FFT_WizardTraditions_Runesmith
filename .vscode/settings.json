{
    "files.associations": {
        "*.txt": "bg3txt",
        "*.khn": "lua",
        "*.lsx": "xml"
    },
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "key_words.bg3txt",
                "settings": {
                    "foreground": "#C586C0"
                }
            },
            {
                "scope": "comments.bg3txt",
                "settings": {
                    "foreground": "#6A9955"
                }
            },
            {
                "scope": "entry_name.bg3txt",
                "settings": {
                    "foreground": "#569CD6"
                }
            },
            {
                "scope": "entry_type.bg3txt",
                "settings": {
                    "foreground": "#4FC1FF"
                }
            },
            {
                "scope": "entry_import.bg3txt",
                "settings": {
                    "foreground": "#4FC1FF"
                }
            },
            {
                "scope": "entry_data.bg3txt",
                "settings": {
                    "foreground": "#9CDCFE"
                }
            },
            {
                "scope": "operators.bg3txt",
                "settings": {
                    "foreground": "#ffa200"
                }
            },
            {
                "scope": "all.bg3txt",
                "settings": {
                    "foreground": "#CE9178"
                }
            }
        ]
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.autopep8"
    },
    "python.formatting.provider": "none",
    "workbench.colorCustomizations": {
        "commandCenter.border": "#e7e7e799",
        "titleBar.activeBackground": "#786b04",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveBackground": "#786b0499",
        "titleBar.inactiveForeground": "#e7e7e799",
        "sash.hoverBorder": "#a99706"
    },
    "peacock.color": "#786b04",
}